<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ============================================== -->
    <!-- PERMISSIONS TO ADD TO YOUR AndroidManifest.xml -->
    <!-- Copy these permissions to android/app/src/main/AndroidManifest.xml -->
    <!-- ============================================== -->

    <!-- Location permissions -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    
    <!-- Background location (Android 10+) - CRITICAL for background tracking -->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    
    <!-- Foreground service permissions -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- Android 14+ requires specific foreground service type permission -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    
    <!-- WakeLock to keep CPU active when screen is off -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Request battery optimization exclusion -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    
    <!-- WiFi state for maintaining network connection -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    
    <!-- Network state -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Notifications (for foreground service) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application>
        <!-- 
        Ensure any foreground service that uses location has the correct type.
        The @capacitor-community/background-geolocation plugin already handles this,
        but if you have custom services, add:
        
        <service
            android:name=".YourLocationService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location" />
        -->
    </application>

</manifest>
